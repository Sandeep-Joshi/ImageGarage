<!DOCTYPE html>

<html lang="en">
<head id="head">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <title> @ViewBag.Title </title>

    @Styles.Render("~/Content/css")

    @{
        var SiteCss = ViewBag.isAda ? "Site_ADA.css" : "Site.css";
        var SiteCssUrl = Url.Content("~/Content/" + SiteCss);
    }
    <link href="@SiteCssUrl" rel="stylesheet" type="text/css" />
    @Scripts.Render("~/bundles/modernizr")

    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.js")"></script>

</head>

<body class="twoColumnHdrFtr">
    <div id="container">
        <header id="header">
            <h1><img alt="[Shine on you crazy diamond]" src="@Url.Content("~/Images/PinkFloyd.png")" /></h1>
        </header>

        <nav id="nav">
            <ul>
                <li>@Html.ActionLink("Register", "Register", "Account")</li>
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
                <li>@Html.ActionLink("Upload", "Upload", "Images")</li>
                @*<li>@Html.ActionLink("Query", "Query", "Images")</li>*@
                <li>@Html.ActionLink("List All", "ListAll", "Images")</li>
                <li>@Html.ActionLink("List By User", "ListByUser", "Images")</li>
                <li>@Html.ActionLink("List By Tag", "ListByTag", "Images")</li>
                <li>@Html.ActionLink("Approve", "Approve", "Images")</li>
                <li>@Html.ActionLink("Delete", "Delete", "Account")</li>
                <li>@Html.ActionLink("Supervise", "ImageViews", "Images")</li>
            </ul>
        </nav>

        <aside id="sidebar">
            <h1>Links</h1>
            <p><a href="https://in.linkedin.com/in/1sandeepjoshi">My home page</a></p>
            <p><a href="http://www.xkcd.com">Daily Science dose</a></p>
        </aside>
        <article id="content">
            @RenderBody()
        </article>
        <footer id="footer">
            <p>&copy; @DateTime.Now.Year Sandeep Joshi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
